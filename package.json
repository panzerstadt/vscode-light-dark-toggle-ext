{
  "name": "light-dark-toggle",
  "displayName": "Toggle Light / Dark Theme",
  "description": "adds a dark/light mode toggle on your view container. useful with markdown previews",
  "version": "0.1.0",
  "icon": "media/night.png",
  "galleryBanner": {
    "color": "#FFFAF9"
  },
  "publisher": "panzerstadt",
  "repository": {
    "type": "git",
    "url": "https://github.com/panzerstadt/vscode-light-dark-toggle-ext"
  },
  "keywords": [
    "dark",
    "light",
    "dark mode",
    "light mode",
    "theme",
    "dark mode toggle",
    "light mode toggle",
    "light dark toggle",
    "dark light toggle",
    "toggle"
  ],
  "engines": {
    "vscode": "^1.42.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "editor/title": [
        {
          "when": "editorIsOpen == true",
          "command": "lightDarkToggle.toggle",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "lightDarkToggle.toggle",
        "title": "Toggle Dark / Light Theme",
        "icon": {
          "light": "media/night.svg",
          "dark": "media/day.svg"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.1",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.42.0",
    "eslint": "^6.8.0",
    "@typescript-eslint/parser": "^2.18.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "glob": "^7.1.6",
    "mocha": "^7.0.1",
    "typescript": "^3.7.5",
    "vscode-test": "^1.3.0"
  }
}
